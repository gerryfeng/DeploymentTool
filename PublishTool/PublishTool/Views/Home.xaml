        <DockPanel>
            <Grid  DockPanel.Dock="Top" Name="lodingGrid" Visibility="Hidden" Panel.ZIndex="500">
                <a:LoadingWait x:Name="_loading"  Visibility="Visible"/>
            </Grid>
        </DockPanel>
    </Grid>
</Page>
